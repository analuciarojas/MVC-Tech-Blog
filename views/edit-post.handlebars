<article class="new-page post">
        <div class="card-header">
            <h2 class="links">
                Edit Post
            </h2>
        </div>
        <div class="form-section">
            <form class="edit-post-form">
                <div class="post-title-section">
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title" id="post-title" value="{{post.title}}" />
                </div>
                <div class="post-content">
                    <label for="post-content">Content</label>
                    <div>
                        <textarea class="entry-field" id="post-content" name="post-content">{{post.content}}</textarea>
                    </div>
                </div>
                 <div class="navbar justify-content-center">
                <div class="flex-row">
                <button class="btn" type="submit">Update post</button>
                <button type="button" class="delete-post-btn btn">Delete post</button>
                </div>
                </div>
            </form>
        </div>
</article>

{{#if loggedIn}}
<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>
{{/if}}