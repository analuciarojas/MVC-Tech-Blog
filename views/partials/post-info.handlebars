<article class="post">
    <div id="card-header">
            <div><a href="/post/{{id}}" id="links">{{title}}</a> </div>
            <div id="posted">Posted by <b>{{user.username}} </b> on <b>{{formatDate created_at}}</b></div>
    </div>
    <div class="content-section">
        <p>{{content}}</p>
    </div>
    </div>
</article>